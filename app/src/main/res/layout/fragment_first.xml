<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <TextView
        android:id="@+id/textViewVidaPocionP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20/0"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonRemoveVidaP2"
        app:layout_constraintStart_toEndOf="@+id/imageButtonAddVidaP2"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonP1aP2" />

    <TextView
        android:id="@+id/textViewVidaPocionP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20/0"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonP2aP1"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonRemoveVidaP1"
        app:layout_constraintStart_toEndOf="@+id/imageButtonAddVidaP1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonRemoveVidaP2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="48dp"
        android:src="@drawable/ic_baseline_favorite_border_24"
        app:layout_constraintBottom_toTopOf="@+id/buttonPMNP2"
        app:layout_constraintEnd_toEndOf="@+id/buttonPMNP1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonPMNP1"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonP1aP2"
        app:layout_constraintVertical_bias="0.496"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/imageButtonAddVidaP2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="48dp"
        android:src="@drawable/ic_baseline_favorite_24"
        app:layout_constraintBottom_toTopOf="@+id/buttonPMP2"
        app:layout_constraintEnd_toEndOf="@+id/buttonPMP1"
        app:layout_constraintStart_toStartOf="@+id/buttonPMP1"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonP1aP2"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/buttonPMP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="P+"
        android:textColor="@android:color/holo_green_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonAddVidaP1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="48dp"
        android:src="@drawable/ic_baseline_favorite_24"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonP2aP1"
        app:layout_constraintEnd_toEndOf="@+id/buttonPMP1"
        app:layout_constraintStart_toStartOf="@+id/buttonPMP1"
        app:layout_constraintTop_toBottomOf="@+id/buttonPMP1"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/buttonPMNP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="P-"
        android:textColor="@android:color/holo_green_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonRemoveVidaP1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="48dp"
        android:src="@drawable/ic_baseline_favorite_border_24"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonP2aP1"
        app:layout_constraintEnd_toEndOf="@+id/buttonPMNP1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonPMNP1"
        app:layout_constraintTop_toBottomOf="@+id/buttonPMNP1"
        app:layout_constraintVertical_bias="0.496"
        tools:ignore="SpeakableTextPresentCheck" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <ImageButton
        android:id="@+id/imageButtonP2aP1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_baseline_arrow_upward_24"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonP1aP2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_baseline_arrow_downward_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <Button
        android:id="@+id/buttonPMP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="P+"
        android:textColor="@android:color/holo_green_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonPMNP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="P-"
        android:textColor="@android:color/holo_green_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>